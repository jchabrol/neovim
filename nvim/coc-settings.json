{
  "languageserver": {
    "robotframework_ls": {
        "command": "robotframework_ls",
        "filetypes": ["robot","resource"],
        "settings": {
          "robot.lint.robocop.enabled":true,
          "robot.codeFormater": "robotidy",
          "robot.pythonpath":[
            "${workspaceFolder}/",
          ],
        },
        "trace.server": "verbose",
        "initializationOptions": {
          "cacheDirectory": "/tmp/robotframework_ls"
        }
    }
  },
  "ruff.enableExperimentalFormatter": true,
  "ruff.autoFixOnSave": true
}

